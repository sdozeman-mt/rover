<section class="section hero">
  <div class="hero-content__background" style="background: url({{ section.settings.hero_image | img_url: '1024x800' }}) {{ section.settings.hero_image_position }} no-repeat; background-size: cover;">
    <span class="hero-content__overlay" style="opacity: {{ section.settings.overlay_range | times: 0.01 }};"></span>
  </div>
  
  <div class="hero-content__foreground">
    <div class="container container--small">
      <div class="hero-content">
        <h1 class="hero-content__heading alpha">{{ section.settings.hero_headline }}</h1>
        <p class="hero-content__paragraph">{{ section.settings.hero_text }}</p>
        {% if section.settings.hero_link != blank %}
          <a href="{{ section.settings.hero_link }}" class="button hero-content__button">{{ section.settings.hero_linktext }}</a>
        {% endif %}
        </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name":           "Section Hero",
    "settings": [
      {
        "type":       "image_picker",
        "id":         "hero_image",
        "label":      "Hero Image"
      },
      {
        "type":       "radio",
        "id":         "hero_image_position",
        "options":    [
          { "value": "center center", "label": "Center Center" },
          { "value": "top left", "label": "Top Left" },
          { "value": "top center", "label": "Top Center" },
          { "value": "top right", "label": "Top Right" },
          { "value": "bottom left", "label": "Bottom Left" },
          { "value": "bottom center", "label": "Bottom Center" },
          { "value": "bottom right", "label": "Bottom Right" }
        ],
        "label":      "Hero Image Position"
      },
      {
        "type":       "range",
        "id":         "overlay_range",
        "min":        0,
        "max":        100,
        "step":       1,
        "label":      "Overlay Opacity",
        "default":    20
      },
      {
        "type":       "text",
        "id":         "hero_headline",
        "label":      "Hero Heading",
        "default":    "Lorem Ipsum"
      },
      {
        "type":       "richtext",
        "id":         "hero_text",
        "label":      "Hero Paragraph",
        "default":    "<p>Lorem Ipsum</p>"
      },
      {
        "type":       "url",
        "id":         "hero_link",
        "label":      "Button link"
      },
      {        
        "type":       "text",
        "id":         "hero_linktext",
        "label":      "Button Text",
        "default":    "Click Here"
      }
    ]
  }
{% endschema %}

