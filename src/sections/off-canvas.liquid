        {% endcomment %}

        {% comment %}
        <div class="supports-cookies">
          <p class="drawer-content__paragraph">{{ 'cart.general.empty' | t }}</p>
          <p class="drawer-content__paragraph">{{ 'cart.general.continue_browsing_html' | t }}</p>
        </div>

        {% comment %}
