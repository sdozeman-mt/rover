      {% comment %}
      {% if cart.item_count > 0 %}
        <h2 class="drawer-content__heading beta">{{{ 'cart.general.title' | t }}</h2>


      {% else %}
        <h2 class="drawer-content__heading beta">{{ 'cart.general.title' | t }}</h2>

